@model ContactViewModel
@{
    ViewData["Title"] = "Kontakt";
}

<div class="container mt-5">
    <h1 class="display-4">Skontaktuj się z nami</h1>
    <p class="lead">Jesteśmy dostępni w różnych kanałach komunikacji.</p>

    <div class="row">
        <!-- Formularz kontaktowy -->
        <div class="col-md-6">
            <h3>Formularz kontaktowy</h3>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Imię i nazwisko</label>
                    <input type="text" class="form-control" id="name" placeholder="Wpisz swoje imię" value="@Model.Name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Adres e-mail</label>
                    <input type="email" class="form-control" id="email" placeholder="Wpisz swój e-mail" value ="@Model.Email">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Wiadomość</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Napisz swoją wiadomość">@Model.Message</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Wyślij wiadomość</button>
            </form>
        </div>

        <!-- Informacje kontaktowe -->
        <div class="col-md-6">
            <h3>Nasze dane kontaktowe</h3>
            <ul class="list-unstyled">
                <li><strong>Adres:</strong> @Model.Address</li>
                <li><strong>Telefon:</strong> @Model.Phone</li>
                <li><strong>Email:</strong> @Model.EmailContact</li>
            </ul>
        </div>
    </div>
</div>


